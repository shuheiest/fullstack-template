{
  "name": "fullstack-template-frontend",
  "version": "1.0.0",
  "description": "Next.js フロントエンド",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:client": "next dev -p 3000",
    "dev:aspida": "aspida --watch",
    "dev:path": "pathpida --ignorePath ../.gitignore -s -w",
    "build": "npm run generate && next build",
    "generate": "run-p generate:*",
    "generate:aspida": "aspida",
    "generate:mock": "aspida-mock",
    "generate:path": "pathpida --ignorePath ../.gitignore -s",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@aspida/axios": "^1.14.0",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "aspida": "^1.14.0",
    "aspida-mock": "^0.11.1",
    "axios": "^1.6.2",
    "dotenv": "^16.5.0",
    "next": "14.0.3",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.25.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
