{
  "name": "fullstack-template-server",
  "version": "1.0.0",
  "description": "DDDアーキテクチャのバックエンドAPI",
  "main": "dist/index.js",
  "scripts": {
    "predev": "npm run generate && npm run migrate:deploy",
    "dev": "run-p dev:*",
    "dev:build": "node ./scripts/build.dev.js",
    "dev:server": "node-dev --respawn index.js",
    "dev:aspida": "aspida --watch",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "prebuild": "npm run generate",
    "build": "node ./scripts/build.prod.js",
    "generate": "run-s generate:prisma generate:aspida generate:frourio",
    "generate:aspida": "aspida",
    "generate:frourio": "frourio --input api --server .",
    "generate:prisma": "prisma generate",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "studio": "prisma studio"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aspida/axios": "^1.14.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/etag": "^6.0.3",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@prisma/client": "^5.7.1",
    "aspida": "^1.14.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "esbuild-node-externals": "^1.18.0",
    "fastify": "^5.1.0",
    "frourio": "^1.3.0",
    "get-jwks": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "node-dev": "^8.0.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
